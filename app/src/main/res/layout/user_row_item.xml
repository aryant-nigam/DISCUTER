<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/groups_item_background"
            android:orientation="horizontal"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_user_row_item"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:elevation="7dp"
                android:src="@drawable/default_profile"
                app:civ_border_color="@color/grey10"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_user_row_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/chewyregular"
                    android:padding="3dp"
                    android:shadowColor="@color/grey6"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="username"
                    android:textColor="@color/grey3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/status_user_row_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/chewyregular"
                    android:padding="3dp"
                    android:shadowColor="@color/grey8"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="status"
                    android:textColor="@color/grey3"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_video_call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/video_call"

                android:layout_gravity="center_vertical">

            </ImageView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>

